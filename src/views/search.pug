extends base
include mixins/video

block content
    form(method="GET").search__form
        input(placeholder="Search by Title", type="text", name="keyword")
        button.search__btn
            i.fas.fa-search

    if videos.length !== 0
        div.video-grid
            each video in videos 
                +videoBlock(video)
    else 
        div.empty__message No videos found.